#include <iostream>

using namespace std;

int main()
{
   
   int a,b,c=0,max=0;
   cin>>a;
   
   while(a!=0)
   {
       b=a%2;
      if(b==1)
      {
          c++;
          if(c>max)
          {
              max=c;
          }
      }
      else{
          c=0;
       
      }
       a=a/2;
       
   }
   cout<<max;

    return 0;
}
